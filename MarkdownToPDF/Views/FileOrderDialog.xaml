<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="MarkdownToPDF.Views.FileOrderDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Arrange Files"
    Style="{StaticResource DefaultContentDialogStyle}"
    PrimaryButtonText="Generate"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <Grid MinWidth="420">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="0,0,0,8"
                   TextWrapping="WrapWholeWords"
                   Opacity="0.85"
                   Text="Drag to reorder the files before generating the preview/PDF."/>

        <ListView Grid.Row="1"
                  x:Name="FilesListView"
                  ItemsSource="{Binding Files}"
                  CanReorderItems="True"
                  AllowDrop="True"
                  ReorderMode="Enabled"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="1"  Text="{Binding FileName}"/>
                        <FontIcon Glyph="&#xE94E;" Margin="0,0,16,0" Opacity="0.6"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentDialog>
 