<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="MarkdownToPDF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dev="using:DevWinUI"
        xmlns:local="using:MarkdownToPDF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TitleBar x:Name="AppTitleBar"
                  Title="{x:Bind dev:ProcessInfoHelper.ProductName}"
                  IsBackButtonVisible="True"
                  IsPaneToggleButtonVisible="True">
            <TitleBar.LeftHeader>
                <ImageIcon Width="28"
                           Height="28"
                           Margin="2,0,14,0"
                           Source="ms-appx:///Assets/AppIcon.png" />
            </TitleBar.LeftHeader>
            <TitleBar.RightHeader>
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Button x:Name="ThemeButton"
                            Height="32"
                            Margin="0,0,4,0"
                            Click="ThemeButton_Click"
                            Content="{dev:FontIcon GlyphCode=E793,
                                                   FontSize=16}"
                            Style="{ThemeResource SubtleButtonStyle}"
                            ToolTipService.ToolTip="Toggle Theme" />
                </StackPanel>
            </TitleBar.RightHeader>
        </TitleBar>
        <NavigationView x:Name="NavView"
                        Grid.Row="1"
                        IsBackButtonVisible="Collapsed"
                        IsPaneToggleButtonVisible="False">
            <Frame x:Name="NavFrame" />
        </NavigationView>
    </Grid>
</Window>

